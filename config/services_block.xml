<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="kikwik_page.twig_components_block.heading" class="Kikwik\PageBundle\Twig\Components\Heading">
            <tag name="twig.component"/>
        </service>

        <service id="kikwik_page.twig_components_block.paragraph" class="Kikwik\PageBundle\Twig\Components\Paragraph">
            <tag name="twig.component"/>
        </service>

        <service id="kikwik_page.twig_components_block.child_list" class="Kikwik\PageBundle\Twig\Components\ChildList">
            <tag name="twig.component"/>
            <argument type="service" id="kikwik_page.repository.page_translation_repository"/>
        </service>

        <!-- Twig\Components\AdminBar -->
        <service id="kikwik_page.twig_components.admin_bar" class="Kikwik\PageBundle\Twig\Components\AdminBar">
            <tag name="twig.component"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="security.authorization_checker"/>
        </service>

        <!-- Twig\Components\LocaleSwitcher -->
        <service id="kikwik_page.twig_components.locale_switcher" class="Kikwik\PageBundle\Twig\Components\LocaleSwitcher">
            <tag name="twig.component"/>
            <argument type="service" id="request_stack"/>
        </service>


    </services>
</container>