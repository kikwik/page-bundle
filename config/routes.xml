<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">

    <route
            id="kikwik_page_admin_list"
            path="/{_locale}"
            controller="kikwik_page.controller.admin_controller::list"
            methods="GET"
    >
        <default key="_locale">%kernel.default_locale%</default>
    </route>

    <route
            id="kikwik_page_admin_create"
            path="/{_locale}/create/{parentId?}"
            controller="kikwik_page.controller.admin_controller::create"
            methods="GET,POST"
    >
        <requirement key="parentId">\d*</requirement>
    </route>

    <route
            id="kikwik_page_admin_update"
            path="/{_locale}/update/{id}"
            controller="kikwik_page.controller.admin_controller::update"
            methods="GET,POST"
    />

    <route
            id="kikwik_page_admin_delete"
            path="/{_locale}/delete/{id}"
            controller="kikwik_page.controller.admin_controller::delete"
            methods="GET,POST"
    />

</routes>