{% extends 'base.html.twig' %}

{% block body %}

    <div class="card m-3">
        <div class="card-header">
            Elimina pagina {{ page }}
        </div>
        <div class="card-body">
            <p>Verranno eliminate definitivamente le seguenti pagine:</p>
            - {{ page }}
            {% for child in children %}
                <div style="padding-left: {{ child.lvl }}rem;">
                    - {{ child.name }}
                </div>
            {% endfor %}

            <form method="post" class="mt-3">
                <a href="{{ path('kikwik_page_admin_page_list') }}" class="btn btn-outline-secondary">Annulla</a>
                <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Stai per eliminare definitivamente {{ (children | length) + 1 }} pagine dal sito!!!')">Elimina pagine</button>
            </form>
        </div>

    </div>



{% endblock %}