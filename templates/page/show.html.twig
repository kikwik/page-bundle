{% extends 'base.html.twig' %}

{% block title %}{{ pageTranslation.title }}{% endblock %}

{% block metaDescription %}{{ pageTranslation.description }}{% endblock %}

{% block body %}
    <twig:KikwikPage:AdminBar/>
    {% for block in pageTranslation.blocks %}
        {% if block.isEnabled %}
            <div class="kw-page-block" data-block-id="{{ block.id }}">
                {{ component(block.component, { block: block }) }}
            </div>
        {% endif %}
    {% endfor %}
{% endblock %}